<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toRight"
        android:layout_width="30dp"
        android:layout_height="74dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#2E7D32"
        android:onClick="toRight"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="r"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toUp"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/toDown"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#2E7D32"
        android:onClick="toDown"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="down"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toLeft"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#00BCD4"
        android:onClick="minusZoom"

        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        tools:ignore="TouchTargetSizeCheck" />

    <RelativeLayout
        android:id="@+id/drawCont"
        android:layout_width="411dp"
        android:layout_height="654dp"
        android:layout_marginBottom="24dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#3949AB"
        android:onClick="createFigura"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#00BCD4"
        android:onClick="plusZoom"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/buttonMinus"
        app:layout_constraintStart_toEndOf="@+id/button"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/toLeft"
        android:layout_width="30dp"
        android:layout_height="74dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#2E7D32"
        android:onClick="toLeft"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="L"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPlus"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/toUp"
        android:layout_width="40dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#2E7D32"
        android:onClick="toUp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="Up"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/toDown"
        app:layout_constraintStart_toEndOf="@+id/toLeft"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/rotate"
        android:layout_width="42dp"
        android:layout_height="74dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#606BD3"
        android:onClick="rotate"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="rotate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/toRight"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/tab"
        android:layout_width="53dp"
        android:layout_height="74dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#2A5253"
        android:onClick="tab"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Tab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rotate" />


</androidx.constraintlayout.widget.ConstraintLayout>